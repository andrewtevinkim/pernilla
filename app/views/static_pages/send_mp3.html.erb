<h1>Send</h1>

<% if user_signed_in? %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
<% end %>

<br/><br/><br/><br/><br/>

<%= form_tag upload_uploads_path, multipart: true do %>

  <%= file_field_tag :upload, accept: 'audio/*' %>

  <p>folder 1: <%= text_field_tag "folder1" %></p>
  <p>folder 2: <%= text_field_tag "folder2" %></p>
  <p>folder 3: <%= text_field_tag "folder3" %></p>
  <p>folder 4: <%= text_field_tag "folder4" %></p>
  <p>(case-sensitive)</p>

  <p><%= submit_tag "Submit" %></p>

<% end %>

